<Window x:Class="SistemaControleEstoque.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaControleEstoque"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="200">
    <Grid>
        <Button x:Name="btnLogar" Content="Logar" HorizontalAlignment="Left" Margin="59,103,0,0" VerticalAlignment="Top" Width="90" Height="21" Click="BtnLogar_Click"/>
        <Label x:Name="lbLogin" Content="Usuário" HorizontalAlignment="Left" Margin="4,15,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblSenha" Content="Senha" HorizontalAlignment="Left" Margin="16,56,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbxLogin" HorizontalAlignment="Left" Height="23" Margin="59,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="tbxSenha" HorizontalAlignment="Left" Margin="59,56,0,0" VerticalAlignment="Top" Width="120" Height="23"/>
    </Grid>
</Window>
