<Window x:Class="ListaDeCelulares.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListaDeCelulares"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dataGrid" Margin="10,93,10,10"/>
        <Button x:Name="btnValorTotal" Content="Valor Total" HorizontalAlignment="Left" Margin="10,10,0,0" Width="140" Height="60" VerticalAlignment="Top" Click="BtnValorTotal_Click"/>
        <Button x:Name="btnBateriaTotal" Content="BateriaTotal" HorizontalAlignment="Left" Margin="155,10,0,0" Width="140" Height="60" VerticalAlignment="Top" Click="BtnBateriaTotal_Click"/>
        <Button x:Name="btnValorMedio" Content="Valor Médio" HorizontalAlignment="Left" Margin="300,10,0,0" Width="140" Height="60" VerticalAlignment="Top" Click="BtnValorMedio_Click"/>

    </Grid>
</Window>
